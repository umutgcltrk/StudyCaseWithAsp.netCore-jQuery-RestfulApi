@model Study
@{
    ViewData["Title"] = "StudyEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Öğrenci Notlarını Düzenle</h3>

<div class="container mt-2">
    <form asp-action="StudyEdit" asp-controller="Study" method="post">
        <input type="hidden" asp-for="StudyId" />
        <input type="text" asp-for="Name" class="form-control" placeholder="Öğrenci Adı" /> <br />
        <input type="text" asp-for="Surname" class="form-control" placeholder="Öğrenci Soyadı" /> <br />
        <input type="text" asp-for="Midterm" class="form-control" placeholder="Vize Notu" /> <br />
        <input type="text" asp-for="Final" class="form-control" placeholder="Final Notu" /> <br />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </form>
</div>